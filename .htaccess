<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

ErrorDocument 404 /error/404.php
ErrorDocument 404 /error/404.html
Options -Indexes
ErrorDocument 403 /error/404.php
ErrorDocument 403 /error/404.html

<FilesMatch "\.ini$">
Order Allow,Deny
Deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # üîπ Redirigir rents.php a rents (antes de la regla que agrega .php autom√°ticamente)
    RewriteCond %{THE_REQUEST} \s/rents\.php
    RewriteRule ^rents\.php$ /rents [R=301,L]

    # Si no existe el archivo pero s√≠ existe con .php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [NC,L]

    # Si no existe el archivo pero s√≠ existe con .html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html [NC,L]

</IfModule>
